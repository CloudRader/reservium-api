 [MASTER]
# Add directory to python path for correct importing analysis by pylint
init-hook='import sys; sys.path.append("app")'

# Fix problem with pydantic imports, caused by pylint, not pydantic
extension-pkg-whitelist=pydantic

# Good variable names which should always be accepted
good-names=i, j, df, db

# Disable warning for using f-strings in logging, which is valid with structured logging
[MESSAGES CONTROL]
disable=no-member,logging-fstring-interpolation,too-few-public-methods,import-outside-toplevel,unsubscriptable-object,no-self-argument,too-many-ancestors,invalid-name,wrong-import-position

# Ignore autogenerated Alembic migration files, which are not meant to be linted
ignore-paths=app/migrations/versions/*